\newcommand\characterpoints[3]{%
  \setsepchar{ }%
  \readlist\arg{#2}%
  \IfStrEqCase{#1}{%
    {at}{%
      \the\numexpr (\arg[1]+\arg[2]+\arg[3]+\arg[4]+\arg[5]+\arg[6]+\arg[7]+\arg[8])*6 + #3 \relax %
    }%
    {ca}{%
      \the\numexpr (\arg[1]+\arg[2]+\arg[3]+\arg[4])*12 + #3 \relax %
    }%
    {co}{%
      \the\numexpr (\arg[1])*48 + #3 \relax %
    }%
  }%
}

